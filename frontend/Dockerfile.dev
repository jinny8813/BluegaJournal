# 構建階段
FROM node:18-alpine AS builder

WORKDIR /app

# 安裝構建依賴
RUN apk add --no-cache python3 make g++

COPY package*.json ./
# 安裝依賴
RUN npm ci

COPY . .
RUN npm run build

# 生產階段
FROM nginx:alpine

COPY --from=builder /app/dist /usr/share/nginx/html
COPY nginx/dev.conf /etc/nginx/conf.d/default.conf

# 添加健康檢查配置
RUN echo "location /health_check { return 200 'OK'; }" >> /etc/nginx/conf.d/default.conf

EXPOSE 80

CMD ["nginx", "-g", "daemon off;"]